<div class="text-center">
  <h1>アクションプラン詳細ページ</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
   <%= form_with(model: @actionplan, local: true) do |f| %>
     <div class="form-group">
      <h2> <%= f.label :infosource, '参考情報' %></h2>
      <h3 class="action_Details"><%=  @actionplan.infosource %></h3>
     </div>
     <div class="form-group">
      <h2> <%= f.label :study, '学んだことは？' %></h2>
      <h3 class="action_Details"><%=  @actionplan.study %></h3>
     </div>
     <div class="form-group">
       <h2><%= f.label :action, 'アクションプラン' %></h2>
      <h3 class="action_Details"><%=  @actionplan.action %></h3>
      </div>
      <div class="form-group">
      <h2><%= f.label :status, '状態' %></h2>
      <h3 class="action_Details"><%=  @actionplan.status %></h3>
      </div>
      <div class="form-group">
       <h2><%= f.label :date, 'アクション投稿日' %></h2>
      <h3 class="action_Details"><%=  @actionplan. created_at.strftime("%Y-%m-%d %H:%M") %></h3>
      </div>
      <div class="text-center">
　　    <%= link_to "戻る", :back, class: 'btn btn-secondary btn-lg text-center' %>
      </div>
    <% end %>
  </div>
</div>
